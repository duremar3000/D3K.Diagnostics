<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <log4net>
    <appender name="wcf" type="log4net.Appender.RollingFileAppender">
      <encoding value="utf-8"/>
      <file value="log\wcf.svclog"/>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--<preserveLogFileNameExtension value="true"/>-->
      <rollingStyle value="Composite"/>
      <countDirection value="1"/>
      <maximumFileSize value="10MB"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="-1"/>
      <staticLogFileName value="false"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline"/>
      </layout>
    </appender>
    <appender name="debug" type="log4net.Appender.RollingFileAppender">
      <file value="log\debug.txt" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--<preserveLogFileNameExtension value="true" />-->
      <rollingStyle value="Composite" />
      <countDirection value="1" />
      <maximumFileSize value="10MB" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="-1" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-3thread][%-8property{mid}] %-5level %logger %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
    </root>
    <logger name="wcf" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="wcf"/>
    </logger>
    <logger name="debug" additivity="false">
      <level value="All" />
      <appender-ref ref="debug" />
    </logger>
  </log4net>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHttpBinding_IService" />
      </basicHttpBinding>
    </bindings>
    <client>
      <endpoint address="http://localhost:23539/Service.svc" binding="basicHttpBinding"
        bindingConfiguration="BasicHttpBinding_IService" contract="ServiceReference.IService"
        name="BasicHttpBinding_IService" />
    </client>
    <diagnostics>
      <messageLogging logEntireMessage="true" logMalformedMessages="true" logMessagesAtServiceLevel="false" logMessagesAtTransportLevel="true" maxMessagesToLog="-1" maxSizeOfMessageToLog="-1"/>
    </diagnostics>
  </system.serviceModel>
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel.MessageLogging" switchValue="ActivityTracing">
        <listeners>
          <add name="wcf" />
        </listeners>
      </source>
      <source name="debug" switchValue="All">
        <listeners>
          <add name="debug" />
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="wcf" type="D3K.Diagnostics.Log4net.Log4netXmlTraceListener, D3K.Diagnostics.Log4net" initializeData="wcf" />
      <add name="debug" type="D3K.Diagnostics.Log4net.Log4netTextWriterTraceListener, D3K.Diagnostics.Log4net" initializeData="debug" />
    </sharedListeners>
    <trace autoflush="true" />
  </system.diagnostics>
  <runtime>
  </runtime>
</configuration>