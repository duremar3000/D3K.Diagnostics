<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
    <add key="OperationIdentityKey" value="oid"/>
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1" />
  </system.web>
  <log4net>
    <appender name="wcf" type="log4net.Appender.RollingFileAppender">
      <encoding value="utf-8" />
      <file value="log\wcf.svclog" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--<preserveLogFileNameExtension value="true" />-->
      <rollingStyle value="Composite" />
      <countDirection value="1" />
      <maximumFileSize value="10MB" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="-1" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-8property{oid}]%message%newline" />
      </layout>
    </appender>
    <appender name="debug" type="log4net.Appender.RollingFileAppender">
      <file value="log\debug.txt" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--<preserveLogFileNameExtension value="true" />-->
      <rollingStyle value="Composite" />
      <countDirection value="1" />
      <maximumFileSize value="10MB" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="-1" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-3thread][%-8property{oid}][%-8property{mid}] %-5level %logger %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
    </root>
    <logger name="wcf" additivity="false">
      <level value="DEBUG" />
      <appender-ref ref="wcf" />
    </logger>
    <logger name="debug" additivity="false">
      <level value="All" />
      <appender-ref ref="debug" />
    </logger>
  </log4net>
  <system.serviceModel>
    <extensions>
      <behaviorExtensions>
        <add name="operationIdentificationBehavior" type="D3K.Diagnostics.Wcf.OperationIdentificationBehavior, D3K.Diagnostics.Wcf"/>
      </behaviorExtensions>
    </extensions>
    <behaviors>
      <endpointBehaviors>
        <behavior>
          <operationIdentificationBehavior/>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior>
          <!-- To avoid disclosing metadata information, set the values below to false before deployment -->
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <!-- To receive exception details in faults for debugging purposes, set the value below to true.  Set to false before deployment to avoid disclosing exception information -->
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <protocolMapping>
      <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
    <diagnostics>
      <messageLogging logEntireMessage="true" logMalformedMessages="true" logMessagesAtServiceLevel="false" logMessagesAtTransportLevel="true" maxMessagesToLog="-1" maxSizeOfMessageToLog="-1" />
    </diagnostics>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <!--
        To browse web app root directory during debugging, set the value below to true.
        Set to false before deployment to avoid disclosing web app folder information.
      -->
    <directoryBrowse enabled="true" />
  </system.webServer>
  <system.diagnostics>
    <sources>
      <source name="System.ServiceModel.MessageLogging" switchValue="ActivityTracing">
        <listeners>
          <add name="wcf" />
        </listeners>
      </source>
      <source name="debug" switchValue="All">
        <listeners>
          <add name="debug" />
        </listeners>
      </source>
      <source name="System.ServiceModel.MessageLogging" switchValue="ActivityTracing">
        <listeners>
          <add name="oid" type="D3K.Diagnostics.Wcf.OperationIdentificationLog4netXmlTraceListener, D3K.Diagnostics.Wcf" initializeData="wcf"/>
        </listeners>
      </source>      
    </sources>
    <sharedListeners>
      <add name="wcf" type="D3K.Diagnostics.Log4net.Log4netXmlTraceListener, D3K.Diagnostics.Log4net" initializeData="wcf" />
      <add name="debug" type="D3K.Diagnostics.Log4net.Log4netTextWriterTraceListener, D3K.Diagnostics.Log4net" initializeData="debug" />
    </sharedListeners>
    <trace autoflush="true" />
  </system.diagnostics>
  <runtime>
  </runtime>
</configuration>
